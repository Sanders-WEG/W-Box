            sed -i "30s/.*/DX_VER_WOW=${DX_VER_WOW}/" "$CONFIG"
            sed -i "3s/.*/d3d11.maxFeatureLevel = $DX_VER_WOW/" $PREFIX/glibc/opt/dxvk.conf
            ;;
        7) 
        resolution_fc_WOW
        ;;
        8) 
LAST_CORES_WOW=1
cpu_cores=$(cat /proc/cpuinfo | grep "processor" | wc -l)

while true; do
    CORES_CHOICE_WOW=$(dialog --no-shadow \
    --title "Ввберите ядра по умолчанию" --default-item "$LAST_CORES_WOW" --menu "\n
 Выберите ядра для запуска по\n
умолчанию от слабого к сильному." 17 36 8 \
                "Ядро 0" "$cor_0" \
                "Ядро 1" "$cor_1" \
                "Ядро 2" "$cor_2" \
                "Ядро 3" "$cor_3" \
                "Ядро 4" "$cor_4" \
                "Ядро 5" "$cor_5" \
                "Ядро 6" "$cor_6" \
                "Ядро 7" "$cor_7" 2>&1 >/dev/tty)
    case $? in
        1) break ;;
    esac
LAST_CORES_WOW=$CORES_CHOICE_WOW
    case $CORES_CHOICE_WOW in
        "Ядро 0") 
            if [ "$cor_0" = "✅" ]; then
                cor_0="🔲"
                cor_sec_0="0,"
                cor_pr_0=","
            else
                cor_0="✅"
                cor_sec_0=","
                cor_pr_0="0,"
            fi
            ;;
        "Ядро 1") 
            if [ "$cor_1" = "✅" ]; then
                cor_1="🔲"
                cor_sec_1="1,"
                cor_pr_1=","
            else
                cor_1="✅"
                cor_sec_1=","
                cor_pr_1="1,"
            fi
            ;;
        "Ядро 2") 
            if [ "$cor_2" = "✅" ]; then
                cor_2="🔲"
                cor_sec_2="2,"
                cor_pr_2=","
            else
                cor_2="✅"
                cor_sec_2=","
                cor_pr_2="2,"
            fi
            ;;
        "Ядро 3") 
            if [ "$cor_3" = "✅" ]; then
                cor_3="🔲"
                cor_sec_3="3,"
                cor_pr_3=","
            else
                cor_3="✅"
                cor_sec_3=","
                cor_pr_3="3,"
            fi
            ;;
        "Ядро 4") 
            if [ "$cor_4" = "✅" ]; then
                cor_4="🔲"
                cor_sec_4="4,"
                cor_pr_4=","
            else
                cor_4="✅"
                cor_sec_4=","
                cor_pr_4="4,"
            fi
            ;;
        "Ядро 5") 
            if [ "$cor_5" = "✅" ]; then
                cor_5="🔲"
                cor_sec_5="5,"
                cor_pr_5=","
            else
                cor_5="✅"
                cor_sec_5=","
                cor_pr_5="5,"
            fi
            ;;
        "Ядро 6") 
            if [ "$cor_6" = "✅" ]; then
                cor_6="🔲"
                cor_sec_6="6,"
                cor_pr_6=","
            else
                cor_6="✅"
                cor_sec_6=","
                cor_pr_6="6,"
            fi
            ;;
        "Ядро 7") 
            if [ "$cor_7" = "✅" ]; then
                cor_7="🔲"
                cor_sec_7="7"
                cor_pr_7=""
            else
                cor_7="✅"
                cor_sec_7=""
                cor_pr_7="7"
            fi
            ;;
    esac
done
PRIM_COR_WOW="$cor_pr_0,$cor_pr_1,$cor_pr_2,$cor_pr_3,$cor_pr_4,$cor_pr_5,$cor_pr_6,$cor_pr_7"
PRIM_COR_WOW=$(echo "$PRIM_COR_WOW" | sed -E 's/,+/,/g; s/^,|,$//g')
SEC_COR_WOW="$cor_sec_0,$cor_sec_1,$cor_sec_2,$cor_sec_3,$cor_sec_4,$cor_sec_5,$cor_sec_7"
SEC_COR_WOW=$(echo "$SEC_COR_WOW" | sed -E 's/,+/,/g; s/^,|,$//g')
sed -i "32s/.*/PRIM_COR_WOW=\"$PRIM_COR_WOW\"/" "$CONFIG"
sed -i "33s/.*/SEC_COR_WOW=\"$SEC_COR_WOW\"/" "$CONFIG"
sed -i "190s/.*/cor_pr_0=$cor_pr_0 cor_pr_1=$cor_pr_1 cor_pr_2=$cor_pr_2 cor_pr_3=$cor_pr_3 cor_pr_4=$cor_pr_4 cor_pr_5=$cor_pr_5 cor_pr_6=$cor_pr_6 cor_pr_7=$cor_pr_7/" "$CONFIG"
sed -i "191s/.*/cor_sec_0=$cor_sec_0 cor_sec_1=$cor_sec_1 cor_sec_2=$cor_sec_3 cor_sec_3=$cor_sec_4 cor_sec_4=$cor_sec_5 cor_sec_5=$cor_sec_5 cor_sec_6=$cor_sec_6 cor_sec_=$cor_sec_7/" "$CONFIG"
sed -i "34s/.*/cor_0=$cor_0 cor_1=$cor_1 cor_2=$cor_2 cor_3=$cor_3 cor_4=$cor_4 cor_5=$cor_5 cor_6=$cor_6 cor_7=$cor_7/" "$CONFIG"
echo "export PRIMARY_CORES=$PRIM_COR_WOW
export SECONDARY_CORES=$SEC_COR_WOW">$PREFIX/glibc/opt/conf/cores.conf
;;
         9)
            while true; do
            FPS_LIM_CHOICE_64=$(dialog --no-shadow \
            --title "Выберите лимит FPS" --inputbox "Введите максимальное значение FPS кратное 5 (от 15 до 240 или 0):\n\n0 - без ограничения" 12 40 $FPS_LIM_WOW 2>&1 >/dev/tty)
            case $? in
            1) continue ;;
            255) continue ;;
            esac
            if [[ "$FPS_LIM_CHOICE_64" =~ ^[0-9]+$ ]] && [ "$FPS_LIM_CHOICE_64" -eq 0 ] || [ "$FPS_LIM_CHOICE_64" -ge 15 ] && [ "$FPS_LIM_CHOICE_64" -le 240 ]; then
            FPS_LIM_WOW="$FPS_LIM_CHOICE_64"
            sed -i "35s/.*/FPS_LIM_WOW=${FPS_LIM_WOW}/" "$CONFIG"
sed -i "4s/.*/dxgi.maxFrameRate = $FPS_LIM_86/" $PREFIX/glibc/opt/dxvk.conf
sed -i "5s/.*/d3d9.maxFrameRate = $FPS_LIM_WOW/" $PREFIX/glibc/opt/dxvk.conf
       break
            else
            dialog --no-shadow \
            --msgbox "Ошибка: Пожалуйста, введите число от 15 до 240 или 0." 10 30
            fi
        done
        ;;
        10)
if [ "$InBr" == "включен" ]; then
inBr_on="✅"
inBr_off="🔲"
else
inBr_on="🔲"
inBr_off="✅"
fi
        INPUT_CHOICE_WOW=$(dialog --no-shadow \
        --title "Input Bridge" --menu "Автозапуск при старте" 9 30 5 \
" $inBr_on Включить" "" \
" $inBr_off Выключить" "" 2>&1 >/dev/tty)
            case $? in
                1) continue ;;
            esac
            case $INPUT_CHOICE_WOW in
" $inBr_on Включить") 
                    sed -i '184s/.*/InBr_eng="Enable"/' "$CONFIG"
                    InBr_eng="Enable"
                    sed -i '182s/.*/InBr="включен"/' "$CONFIG"
                    InBr="включен"
                    ;;
" $inBr_off Выключить") 
                    sed -i '184s/.*/InBr_eng="Disable"/' "$CONFIG"
                    InBr_eng="Disable"
                    sed -i '182s/.*/InBr="выключен"/' "$CONFIG"
                    InBr="выключен"
                    ;;
            esac
        ;;
        11)
        LAST_SERVICES_WOW=${LAST_SERVICES_WOW:-1}
        while true; do
            SERVICES_CHOICE=$(dialog --no-shadow \
            --title "Совместимость при запуске" --default-item "$LAST_SERVICES_WOW" --menu "──────────────────────────────────────\n\
Режим совместимости при запуске -
принудительно использовать резервное
разрешение, выбранное в системных настройках
и отключить установку PhysX при создании
контейнера \n\
──────────────────────────────────────\n\
DRI3                $DRI3_WOW \n\
Режим совместимости $STARTUP_WOW \n\
Services.exe        $SERVICES_WOW" 19 42 3 \
" DRI3 (отключить, если SD845)" "" \
" Режим совместимости при запуске" "" \
" Запуск services.exe" "" 2>&1 >/dev/tty)
            case $? in
                1) break ;;
                255) continue ;;
            esac
        	LAST_SERVICES_WOW=$SERVICES_CHOICE
            case $SERVICES_CHOICE in
" DRI3 (отключить, если SD845)") 
                if [ "$DRI3_WOW_eng" = "Enable" ]; then
                DRI3_WOW_eng="Disable"
                DRI3_WOW="Выключен"
                DRI_WOW="export MESA_VK_WSI_DEBUG=sw"
                else
                DRI3_WOW_eng="Enable"
                DRI3_WOW="Включен"
                DRI_WOW="unset MESA_VK_WSI_DEBUG"
                fi
                sed -i "22s/.*/DRI3_WOW_eng=${DRI3_WOW_eng}/" "$CONFIG"
                sed -i "25s/.*/DRI_WOW=\"$DRI_WOW\"/" "$CONFIG"
                ;;
" Режим совместимости при запуске") 
                if [ "$STARTUP_WOW_eng" = "Enable" ]; then
            STARTUP_WOW_eng="Disable"
            STARTUP_WOW="Выключен"
            START_WOW="export STARTUP_COMPATIBILITY_MODE=0"
                else
            STARTUP_WOW_eng="Enable"
            STARTUP_WOW="Включен"
            START_WOW="export STARTUP_COMPATIBILITY_MODE=1"
                fi
                sed -i "23s/.*/STARTUP_WOW_eng=${STARTUP_WOW_eng}/" "$CONFIG"
                sed -i "26s/.*/START_WOW=\"$START_WOW\"/" "$CONFIG"
                ;;
" Запуск services.exe") 
                if [ "$SERVICES_WOW_eng" = "Enable" ]; then
                SERVICES_WOW_eng="Disable"
                SERVICES_WOW="Выключен"
                SERV_WOW="export STARTUP_WINEDEVICE_MODE=0"
                else
                SERVICES_WOW_eng="Enable"
                SERVICES_WOW="Включен"
                SERV_WOW="export STARTUP_WINEDEVICE_MODE=1"
                fi
                sed -i "86s/.*/SERVICES_WOW_eng=${SERVICES_WOW_eng}/" "$CONFIG"
                sed -i "27s/.*/SERV_WOW=\"$SERV_WOW\"/" "$CONFIG"
                sed -i "24s/.*/SERVICES_WOW=${SERVICES_WOW}/" "$CONFIG"
                ;;
            esac
        done
        echo "$DRI_WOW">$PREFIX/glibc/opt/conf/wsi_debug.conf
        echo "$START_WOW">$PREFIX/glibc/opt/conf/force_compatibility.conf
        echo "$SERV_WOW">$PREFIX/glibc/opt/conf/winedevice_startup.conf
        ;;
        12)
        export_fc
        ;;
        13)
result_1="${GAME%.lnk}"
GAME_NAME=$(dialog --no-shadow \
--inputbox "Введите новое имя для ярлыка игры" 8 35 "$result_1" 2>&1 >/dev/tty)
if [ $? -ne 0 ]; then
    settings_game "$CONFIG_GAME" "weg"
    exit
fi
        if [ -z "$GAME_NAME" ]; then
            GAME_NAME="$result_1"
        fi
GAME_NAME=$(echo "$GAME_NAME" | tr -d '[:cntrl:]')
mv "$HOME/Desktop/$result_1.lnk" "$HOME/Desktop/$GAME_NAME.lnk"
mv "$HOME/.shortcuts/icons/$result_1.png" "$HOME/.shortcuts/icons/$GAME_NAME.png"
mv "$HOME/.shortcuts/$result_1" "$HOME/.shortcuts/$GAME_NAME"
mv "$HOME/.shortcuts/backup/$result_1" "$HOME/.shortcuts/backup/$GAME_NAME"
GAME="$GAME_NAME.lnk"
sed -i "4s/.*/GAME=\"$GAME_NAME.lnk\"/" "$HOME/.shortcuts/$GAME_NAME"
sed -i "4s/.*/GAME=\"$GAME_NAME.lnk\"/" "$HOME/.shortcuts/backup/$GAME_NAME"
result=$GAME_NAME
unset settings
 bash -c "source \"$HOME/Settings\""
        exit
    esac
done
. $return_menu
}