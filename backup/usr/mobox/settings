theme_wow="olive"
olive_wow="✅"; eval "$(printf '%s="🔲" ' dark_wow silver_wow light_wow classic_wow)"
                ;;
            esac
lines_added=$(wc -l < "$dark_reg")
total_lines=$(wc -l < "$user_reg")
