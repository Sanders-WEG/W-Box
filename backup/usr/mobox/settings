    dir_100="🔲"
    dir_101="🔲"
    dir_110="🔲"
    dir_111="🔲"
    dir_120="🔲"
    dir_121="✅"
    ;;
esac
            DX_VER_CHOICE_64=$(dialog --no-shadow \
            --title "Выберите максимальный DirectX" --menu " " 16 40 5 \
            "1" "$dir_91 DirectX 9.1" \
            "2" "$dir_92 DirectX 9.2" \
            "3" "$dir_93 DirectX 9.3" \
            "4" "$dir_100 DirectX 10.0" \
            "5" "$dir_101 DirectX 10.1" \
            "6" "$dir_110 DirectX 11.0" \
            "7" "$dir_111 DirectX 11.1" \
            "8" "$dir_120 DirectX 12.0" \
            "9" "$dir_121 DirectX 12.1" 2>&1 >/dev/tty)
            case $? in
                1) continue ;;
            esac
            case $DX_VER_CHOICE_64 in
                1) 
                DX_VER_WOW="9_1";;
                2) 
                DX_VER_WOW="9_2";;
                3) 
                DX_VER_WOW="9_3";;
                4) 
                DX_VER_WOW="10_0";;
                5) 
                DX_VER_WOW="10_1";;
                6) 
                DX_VER_WOW="11_0";;
                7) 
                DX_VER_WOW="11_1";;
                8) 
                DX_VER_WOW="12_0";;
                9) 
                DX_VER_WOW="12_1";;
