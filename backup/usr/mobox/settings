desk_on()
{
    choice=$(dialog --no-shadow \
                --title "" \
                --extra-button \
                --ok-label "Настроить" \
                --cancel-label " Cancel " \
                --extra-label " Сбросить  " \
                --menu "$dialog_text" 22 44 10\
                "${options[@]}" \
                3>&1 1>&2 2>&3 3>&-)
}

desk_off()
{
    choice=$(dialog --no-shadow \
                --title "" \
                --extra-button \
                --ok-label "Настроить" \
                --cancel-label " Cancel " \
                --extra-label " Сбросить  " \
                --menu "$dialog_text" 24 44 10\
                "${options[@]}" \
                3>&1 1>&2 2>&3 3>&-)
}
